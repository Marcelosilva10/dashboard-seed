<main role="main" class="profile">
  <div class="container">
    {{#if userError}}
    <div class="col-xs-24 col-sm-12 col-sm-offset-6">
      <h2>There is no Agent Smith here!</h2>
      <p>Usuário não existe, está inativo ou não quer que seus dados sejam divulgados publicamente. :(</p>
    </div>
    {{else}}
    <div class="col-xs-24 col-md-5 profile-col">
      <div class="user-detail">
        <figure class="avatar">
          {{#if user.avatar}}
          <img src="{{userView.avatar}}" alt="{{userView.local.email}}">
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          {{else}}
          <img src="{{avatar}}" alt="{{userView.local.email}}">
          {{/if}}
        </figure>
        <div class="resume">
          {{#if userView.resume}}
          <p><strong>Resume:</strong></p>
          <p>{{userView.resume}}</p>
          {{else}}
          <p>
            Adicione uma descrição curta sobre você. :)
          </p>
          {{/if}}
        </div>
      </div>
      <div class="profile--data">
        <ul class="list-unstyled">
          <li class="user-name">
          {{#if userView.name}}
            {{userView.name}}
          {{/if}}
          </li>
          <li>{{userView.local.email}}</li>
          <li>{{userView.permission}} {{userView.alias}}</li>
          <li>ativo 5 minutos atrás</li>
        </ul>
        {{#ifCond userView.alias '==' userLogged.alias}}
        <a href="/profile/edit" class="btn btn-secondary btn-sm edit">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <b>Editar</b>
        </a>
        {{/ifCond}}
      </div>
    </div>
    <div class="col-xs-24 col-md-19">
    </div>
    {{/if}}

  </div>
</main>
